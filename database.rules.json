{
  "rules": {
    // ==================== HELPER ====================
    // Admin check: root.child('adminUids/' + auth.uid).val() === true
    // Owner check: root.child('nickToUid/' + $nickname).val() === auth.uid

    // ==================== AUTH MAPPINGS ====================
    "nickToUid": {
      ".read": true,
      "$nickname": {
        ".write": "auth != null && (!data.exists() || data.val() === auth.uid)"
      }
    },
    "uidToNick": {
      ".read": true,
      "$uid": {
        ".write": "auth != null && auth.uid === $uid"
      }
    },
    "adminUids": {
      ".read": true,
      "$uid": {
        ".write": "auth != null && (root.child('adminUids/' + auth.uid).val() === true || !root.child('adminUids').exists())"
      }
    },

    // ==================== USER DATA ====================
    "users": {
      ".read": true,
      "$nickname": {
        ".write": "auth != null && (root.child('nickToUid/' + $nickname).val() === auth.uid || root.child('adminUids/' + auth.uid).val() === true || !data.exists())"
      }
    },
    "adminUsers": {
      ".read": true,
      "$nickname": {
        ".write": "auth != null && root.child('adminUids/' + auth.uid).val() === true"
      }
    },

    // ==================== GAME STATE (auth required to write) ====================
    "gameState": {
      ".read": true,
      ".write": "auth != null"
    },
    "resultadosFinais": {
      ".read": true,
      ".write": "auth != null"
    },
    "nextRound": {
      ".read": true,
      ".write": "auth != null"
    },

    // ==================== CACHE (auth required to write) ====================
    "cache": {
      ".read": true,
      ".write": "auth != null"
    },
    "scoresCache": {
      ".read": true,
      ".write": "auth != null"
    },
    "statsCache": {
      ".read": true,
      ".write": "auth != null"
    },
    "gameData": {
      ".read": true,
      ".write": "auth != null"
    },

    // ==================== CHAT (auth required) ====================
    "chat": {
      ".read": true,
      ".write": "auth != null",
      ".indexOn": ["timestamp"]
    },
    "draftChat": {
      ".read": true,
      ".write": "auth != null",
      ".indexOn": ["timestamp"]
    },
    "privateMessages": {
      ".read": "auth != null",
      ".write": "auth != null",
      ".indexOn": ["timestamp"]
    },

    // ==================== TRADE / OFFERS (auth required) ====================
    "tradeOffers": {
      ".read": true,
      ".write": "auth != null"
    },
    "offers": {
      ".read": true,
      ".write": "auth != null"
    },
    "monthlyTrades": {
      ".read": true,
      ".write": "auth != null"
    },

    // ==================== NOTIFICATIONS (auth required) ====================
    "notifications": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "challenges": {
      ".read": true,
      ".write": "auth != null"
    },
    "challengeCompletions": {
      ".read": true,
      ".write": "auth != null"
    },

    // ==================== DRAFT (auth required) ====================
    "draftPicks": {
      ".read": true,
      ".write": "auth != null"
    },
    "draftStatus": {
      ".read": true,
      ".write": "auth != null"
    },

    // ==================== ADMIN-ONLY WRITES ====================
    "settings": {
      ".read": true,
      ".write": "auth != null && root.child('adminUids/' + auth.uid).val() === true"
    },
    "bannedUsers": {
      ".read": true,
      ".write": "auth != null && root.child('adminUids/' + auth.uid).val() === true"
    },
    "temporadaIniciada": {
      ".read": true,
      ".write": "auth != null && root.child('adminUids/' + auth.uid).val() === true"
    },
    "totalArrecadado": {
      ".read": true,
      ".write": "auth != null && root.child('adminUids/' + auth.uid).val() === true"
    },
    "customPrices": {
      ".read": true,
      ".write": "auth != null && root.child('adminUids/' + auth.uid).val() === true"
    },
    "customPhotos": {
      ".read": true,
      ".write": "auth != null && root.child('adminUids/' + auth.uid).val() === true"
    },
    "customTitles": {
      ".read": true,
      ".write": "auth != null && root.child('adminUids/' + auth.uid).val() === true"
    },
    "customPositions": {
      ".read": true,
      ".write": "auth != null && root.child('adminUids/' + auth.uid).val() === true"
    },
    "customTeams": {
      ".read": true,
      ".write": "auth != null && root.child('adminUids/' + auth.uid).val() === true"
    },
    "manualPlayers": {
      ".read": true,
      ".write": "auth != null && root.child('adminUids/' + auth.uid).val() === true"
    },
    "resultadosReais": {
      ".read": true,
      ".write": "auth != null && root.child('adminUids/' + auth.uid).val() === true"
    },
    "resultadosConferidos": {
      ".read": true,
      ".write": "auth != null && root.child('adminUids/' + auth.uid).val() === true"
    },

    // ==================== DENY ALL OTHER PATHS ====================
    "$other": {
      ".read": false,
      ".write": false
    }
  }
}
